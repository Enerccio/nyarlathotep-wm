char* __vertex_shader_square = "#version 100\n"
		"precision mediump float;\n"
		"\n"
		"uniform vec2 resolution;\n"
		"uniform vec2 origin;\n"
		"attribute vec4 position;\n"
		"attribute vec2 uv;\n"
		"varying vec2 v_uv;\n"
		"\n"
		"void main() {\n"
		"	mat4 ortho = mat4(\n"
		"		2.0/resolution.x,         0,          0,      0,\n"
		"		0,        -2.0/resolution.y,          0,      0,\n"
		"		0,                        0,         -1,      0,\n"
		"		-1,                       1,          0,      1\n"
		"	);\n"
		"	gl_Position = ortho * (vec4(origin, 0, 0) + position);\n"
		"	v_uv = uv;\n"
		"}\n";
		
char* __fragment_shader_square_texture = "#version 100\n"
		"precision mediump float;\n"
		"\n"
		"varying vec2 v_uv;\n"
		"uniform sampler2D texture;\n"
		"\n"
		"void main() {\n"
		"	vec4 color = texture2D(texture, v_uv);\n"
		"	gl_FragColor = color;\n"
		"}\n";

